{
  // Configuration du formateur HTML
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  
  // Configuration du formateur pour TypeScript
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.codeActionsOnSave": {
      "source.fixAll": "never"
    }
  },
  
  // Configuration pour SCSS
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  
  // Configuration pour JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  
  // Options de formatage HTML (désactivé car on utilise Prettier)
  "html.format.enable": false,
  
  // Configuration TypeScript (désactiver le formateur intégré)
  "typescript.format.enable": false,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "typescript.format.placeOpenBraceOnNewLineForFunctions": false,
  
  // Configuration Prettier
  "prettier.enable": true,
  "prettier.printWidth": 180,
  "prettier.tabWidth": 4,
  "prettier.useTabs": false,
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  
  // Désactiver les autres formateurs
  "editor.formatOnSaveMode": "file"
}
